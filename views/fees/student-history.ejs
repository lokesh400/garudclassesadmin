<!DOCTYPE html>
<html>
<head>
  <title>Student Fee Details</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gradient-to-br from-gray-100 to-gray-200 p-6 min-h-screen">

<div class="max-w-5xl mx-auto space-y-6">

  <!-- HEADER CARD -->
  <div class="bg-white rounded-xl shadow p-6">
    <a href="/fees" class="text-blue-600 text-sm">‚Üê Back</a>

    <h2 class="text-2xl font-bold text-gray-800 mt-2">
      <%= fee.student.name %>
    </h2>
    <p class="text-gray-500 text-sm">
      Roll: <%= fee.student.rollNumber || '-' %>
    </p>

    <div class="grid grid-cols-3 gap-4 mt-6">
      <div class="bg-gray-50 p-4 rounded-lg">
        <p class="text-sm text-gray-500">Total Fee</p>
        <p class="text-xl font-bold">‚Çπ <%= fee.totalFee %></p>
      </div>
      <div class="bg-green-50 p-4 rounded-lg">
        <p class="text-sm text-green-600">Paid</p>
        <p class="text-xl font-bold text-green-700">‚Çπ <%= paid %></p>
      </div>
      <div class="bg-red-50 p-4 rounded-lg">
        <p class="text-sm text-red-600">Balance</p>
        <p class="text-xl font-bold text-red-700">‚Çπ <%= balance %></p>
      </div>
    </div>
  </div>

  <!-- PAY CARD -->
  <div class="bg-white rounded-xl shadow p-6">
    <h3 class="font-semibold mb-4">üí≥ Pay Fee</h3>

    <form
      action="/fees/student/<%= fee.student._id %>/pay"
      method="POST"
      class="flex gap-4"
    >
      <input type="number" name="amount" placeholder="Amount"
        class="border rounded-lg px-4 py-2 w-40" required>

      <select name="mode" class="border rounded-lg px-4 py-2">
        <option>Cash</option>
        <option>UPI</option>
        <option>Bank</option>
      </select>

      <button
        class="bg-green-600 hover:bg-green-700 text-white px-6 rounded-lg shadow transition">
        Pay
      </button>
    </form>
  </div>

  <!-- PAYMENT HISTORY -->
  <div class="bg-white rounded-xl shadow p-6">
    <h3 class="font-semibold mb-4">üßæ Payment History</h3>

    <table class="w-full text-sm">
      <thead class="bg-gray-100">
        <tr>
          <th class="p-3 text-left">Date</th>
          <th class="p-3">Amount</th>
          <th class="p-3">Mode</th>
          <th class="p-3">Receipt</th>
          <th class="p-3 text-center">Actions</th>
        </tr>
      </thead>

      <tbody>
        <% fee.payments.forEach(p => { %>
        <tr class="border-b hover:bg-gray-50">
          <td class="p-3"><%= p.date.toDateString() %></td>
          <td class="p-3 font-medium">‚Çπ <%= p.amount %></td>
          <td class="p-3">
            <span class="px-2 py-1 rounded text-xs bg-blue-100 text-blue-700">
              <%= p.mode %>
            </span>
          </td>
          <td class="p-3 text-xs"><%= p.receiptNo %></td>

          <td class="p-3 text-center flex justify-center gap-3">
            <a href="/fees/receipt/<%= fee._id %>/<%= p._id %>"
               class="text-green-600 hover:underline">
              PDF
            </a>

            <form action="/fees/payment/<%= fee._id %>/<%= p._id %>/delete"
                  method="POST">
              <button class="text-red-600 hover:underline">
                Delete
              </button>
            </form>
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>
  </div>

</div>
</body>
</html>
