<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Search Results</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 p-6">
  <div class="max-w-4xl mx-auto bg-white p-6 rounded shadow">
    <h2 class="text-2xl font-bold mb-4">Search Results</h2>

    <% if (submissions.length === 0) { %>
      <p class="text-gray-600">No submissions found.</p>
    <% } else { %>
      <ul class="space-y-4">
        <% submissions.forEach(sub => { %>
          <li class="border rounded p-4 flex justify-between items-center">
            <div>
              <p><strong>Name:</strong> <%= sub.data.Name %></p>
              <p><strong>Mobile:</strong> <%= sub.mobileNumber %></p>
              <p><strong>Form:</strong> <%= sub.form.title %></p>
              <p><strong>Date:</strong> <%= sub.form.date %></p>
            </div>
            <a href="/admitcard/<%= sub._id %>" 
               class="bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700">
              View/Download Admit Card
            </a>
          </li>
        <% }) %>
      </ul>
    <% } %>
  </div>
</body>
</html>
