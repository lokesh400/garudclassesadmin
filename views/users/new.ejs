<div class="min-h-screen bg-gradient-to-br from-blue-50 via-indigo-50 to-purple-50 py-12 px-4">
  <div class="max-w-md mx-auto">
    <!-- Header -->
    <div class="text-center mb-8">
      <div class="inline-flex items-center justify-center w-12 h-12 bg-indigo-600 rounded-full mb-4">
        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m0 0h-6m0 0H6"></path>
        </svg>
      </div>
      <h1 class="text-3xl font-bold text-gray-900 mb-2">Add New User</h1>
      <p class="text-gray-600">Create a new account for your team</p>
    </div>

    <!-- Form -->
    <form method="POST" action="/teachers/new" class="bg-white rounded-lg shadow-lg p-8 space-y-6">
      
      <!-- Name Field -->
      <div>
        <label for="name" class="block text-sm font-semibold text-gray-700 mb-2">Full Name</label>
        <input 
          type="text"
          id="name"
          name="name" 
          placeholder="John Doe" 
          class="w-full px-4 py-2.5 border-2 border-gray-200 rounded-lg focus:outline-none focus:border-indigo-500 focus:bg-indigo-50 transition" 
          required>
      </div>

      <!-- Username Field -->
      <div>
        <label for="username" class="block text-sm font-semibold text-gray-700 mb-2">Username</label>
        <input 
          type="text"
          id="username"
          name="username" 
          placeholder="johndoe123" 
          class="w-full px-4 py-2.5 border-2 border-gray-200 rounded-lg focus:outline-none focus:border-indigo-500 focus:bg-indigo-50 transition" 
          required>
      </div>

      <!-- Email Field -->
      <div>
        <label for="email" class="block text-sm font-semibold text-gray-700 mb-2">Email Address</label>
        <input 
          type="email"
          id="email"
          name="email" 
          placeholder="john@example.com" 
          class="w-full px-4 py-2.5 border-2 border-gray-200 rounded-lg focus:outline-none focus:border-indigo-500 focus:bg-indigo-50 transition" 
          required>
      </div>

      <!-- Role Field -->
      <div>
        <label for="role" class="block text-sm font-semibold text-gray-700 mb-2">User Role</label>
        <select 
          id="role"
          name="role" 
          class="w-full px-4 py-2.5 border-2 border-gray-200 rounded-lg focus:outline-none focus:border-indigo-500 focus:bg-indigo-50 transition bg-white cursor-pointer">
          <option value="admin">Admin</option>
          <option value="receptionist">Receptionist</option>
          <option value="superadmin">Super Admin</option>
        </select>
      </div>

      <!-- Submit Button -->
      <button 
        type="submit"
        class="w-full bg-gradient-to-r from-indigo-600 to-purple-600 hover:from-indigo-700 hover:to-purple-700 text-white font-semibold py-3 rounded-lg transition transform hover:scale-105 active:scale-95 shadow-lg mt-2 flex items-center justify-center space-x-2">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
        </svg>
        <span>Create User</span>
      </button>
    </form>

    <!-- Footer Text -->
    <p class="text-center text-gray-600 text-sm mt-6">
      Need help? <a href="#" class="text-indigo-600 font-semibold hover:text-indigo-700">Contact support</a>
    </p>
  </div>
</div>
