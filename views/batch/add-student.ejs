  <div class="mx-auto bg-white p-6 rounded shadow">
    <h2 class="text-2xl font-semibold mb-4">Add Student</h2>
    <form id="studentForm" class="space-y-4">
      <input type="text" id="name" placeholder="Student Name" class="border p-2 rounded w-full" required>
      <input type="email" id="email" placeholder="Email" class="border p-2 rounded w-full" required>
      <input type="text" id="parent" placeholder="Parent" class="border p-2 rounded w-full" required>
      <input type="text" id="number" placeholder="Number" class="border p-2 rounded w-full" required>
      
      <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded">Add Student</button>
    </form>
  </div>

  <script>
    document.getElementById("studentForm").addEventListener("submit", async (e) => {
      e.preventDefault();

      const name = document.getElementById("name").value;
      const email = document.getElementById("email").value;
      const batchId = '<%= batchId %>';
      const parent = document.getElementById("parent").value;
      const number = document.getElementById("number").value;

      const res = await fetch("/api/students/create", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ name, email, batchId, parent, number }),
      });
      const data = await res.json();
      alert(data.message);
      if (data.success) location.reload();
    });
  </script>
